<MudForm Model="@office" ValidationDelay="0">
    <MudDialog DefaultFocus="DefaultFocus.LastChild">
        <DialogContent>
            <MudTextField @bind-Value="@office.OfficeName" For="@(()=> office.OfficeName)" Required="true" RequiredError="Поле является обязательным!" Label="Название офиса"></MudTextField>

            <MudTextField @bind-Value="@office.Adress" For="@(()=> office.Adress)" Required="true" RequiredError="Поле является обязательным!" Label="Адрес офиса"></MudTextField>
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel">Cancel</MudButton>
            <MudButton Color="Color.Success" Variant="Variant.Filled" OnClick="Submit">@ButtonText</MudButton>
        </DialogActions>
    </MudDialog>
</MudForm>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter]public Office office { get; set; } = new Office();
    
    [Parameter] public string ButtonText { get; set; }
    
    void Submit()
    {
        MudDialog.Close(DialogResult.Ok(office));
    } 
    void Cancel() => MudDialog.Cancel();
}